Accept the elements of array and display reverse of it using pointer
#include<stdio.h>
void main()
{
    int a[100],i,n;
    int *ptr;
    printf("Enter the size of array ");
    scanf("%d",&n);
    ptr=&a[n];
    for(i=0;i<n;i++)
    scanf("%d",&a[i]);
    for(i=1;i<=n;i++)
    printf("%d\t",*(ptr - i));

}
